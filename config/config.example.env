# Netgear LM1200 Configuration
NETGEAR_IP=192.168.0.201
NETGEAR_ADMIN_PASSWORD=admin

# State & Storage Directory
SMS_STATE_DIR=/var/lib/netgear-sms-gateway

# Telegram Configuration (Optional - Leave empty to disable)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_PREFIX="[SMS Gateway]"
RATE_LIMIT_SECONDS=300

# ============================================================================
# Logging (Optional) - NEW in v1.2.0
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Encryption (Optional) - NEW in v1.2.0
# ============================================================================
SMS_ENCRYPTION_ENABLED=false
SMS_ENCRYPTION_KEY_FILE=/etc/netgear-sms-gateway/.encryption.key

# ============================================================================
# Retry Logic - NEW in v1.2.0
# ============================================================================
SMS_RETRY_ENABLED=true
SMS_RETRY_MAX_ATTEMPTS=5
SMS_RETRY_INITIAL_DELAY=10
SMS_RETRY_MAX_DELAY=60

# ============================================================================
# Consecutive Failure Alert Suppression - NEW in v1.3.0
# ============================================================================
# Alert only after N consecutive timer failures (suppresses transient errors)
SMS_FAILURE_THRESHOLD=3  # Alert after 3 failures (~15 min with 5-min timer)

# ============================================================================
# Health Check - NEW in v1.2.0
# ============================================================================
HEALTH_CHECK_STALE_THRESHOLD=1800  # 30 minutes
HEALTH_CHECK_PING_MODEM=false
